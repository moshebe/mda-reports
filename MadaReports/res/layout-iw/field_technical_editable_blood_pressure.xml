<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tvLabelBloodPressure"
        style="@style/TechInfoContainer.TextView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="לחץ דם" />

    <LinearLayout
        android:id="@+id/llBpValuesContainer"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/tvLabelBloodPressure"
        android:gravity="center"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tvBloodPressureValueLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="60"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvBloodPressureSlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvBloodPressureValueHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="120"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgEditBloodPressureField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/llBpValuesContainer"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>